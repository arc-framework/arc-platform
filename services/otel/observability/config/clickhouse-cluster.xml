<?xml version="1.0"?>
<!--
  ClickHouse cluster configuration for SigNoz observability stack.
  Configures ZooKeeper connection (for replica metadata) and
  single-node distributed cluster definition.
-->
<clickhouse>
    <!-- ZooKeeper: used by ClickHouse for replicated table coordination -->
    <zookeeper>
        <node index="1">
            <host>zookeeper</host>
            <port>2181</port>
        </node>
    </zookeeper>

    <!-- Cluster definition: single-shard, single-replica for local development -->
    <remote_servers>
        <cluster>
            <shard>
                <replica>
                    <host>clickhouse</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster>
    </remote_servers>
</clickhouse>
