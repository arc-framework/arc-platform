<?xml version="1.0"?>
<!--
  ClickHouse user configuration for arc-friday observability stack.
  Allows the default (no-password) user to connect from any container IP.
-->
<clickhouse>
    <profiles>
        <default>
            <!-- Max memory per query: set high to avoid query-level OOM on busy systems -->
            <max_memory_usage>10000000000</max_memory_usage>
            <load_balancing>random</load_balancing>
        </default>
        <readonly>
            <readonly>1</readonly>
        </readonly>
    </profiles>

    <users>
        <default>
            <!-- No password â€” internal-only; ClickHouse is not exposed outside localhost -->
            <password></password>
            <networks>
                <!-- Allow connections from all IPs (Docker containers on arc_otel_net) -->
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </default>
    </users>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>
